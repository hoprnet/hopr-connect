{
  "name": "@hoprnet/hopr-connect",
  "version": "0.2.30",
  "description": "A libp2p-complaint transport module that handles NAT traversal by using WebRTC",
  "repository": "https://github.com/hoprnet/hopr-connect.git",
  "homepage": "https://github.com/hoprnet/hopr-connect",
  "license": "GPL-3.0-only",
  "keywords": [
    "nat-traversal",
    "libp2p",
    "webrtc"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "14 || 15",
    "yarn": "1"
  },
  "files": [
    "lib",
    "!**/*.spec.ts",
    "!**/*.spec.d.ts",
    "!**/*.spec.js",
    "!**/*.spec.js.map"
  ],
  "scripts": {
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "clean": "rm -Rf ./lib",
    "build": "yarn clean && tsc -p .",
    "test": "yarn node --trace-warnings --unhandled-rejections=strict node_modules/.bin/mocha --reporter=tap --full-trace --exit",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@hoprnet/hopr-utils": "1.74.0-next.16",
    "abortable-iterator": "^3.0.0",
    "bl": "^5.0",
    "debug": "^4.3.1",
    "heap-js": "^2.1.5",
    "it-handshake": "^2.0.0",
    "multiaddr": "~9.0.2",
    "multihashes": "^4.0.2",
    "p-defer": "3",
    "peer-id": "~0.14.8",
    "simple-peer": "9.11",
    "stream-to-it": "^0.2.3",
    "webrtc-stun": "3.0.0",
    "wrtc": "0.4.7"
  },
  "devDependencies": {
    "@types/debug": "^4.1.6",
    "@types/mocha": "^8.2.2",
    "@types/node": "14",
    "@types/simple-peer": "^9.11",
    "@types/yargs": "^17.0.2",
    "abort-controller": "3.0.0",
    "it-pair": "^1.0.0",
    "it-pipe": "^1.1.0",
    "it-pushable": "^1.4.2",
    "libp2p": "^0.31.6",
    "libp2p-interfaces": "^1.0",
    "libp2p-mplex": "0.10",
    "libp2p-noise": "^3.0",
    "mocha": "^9.0",
    "prettier": "~2.3.2",
    "ts-node": "~10.0.0",
    "typescript": "^4.3",
    "yargs": "^17.0.1"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "src/base/*.spec.ts",
      "src/relay/*.spec.ts",
      "src/webrtc/*.spec.ts",
      "src/utils/*.spec.ts",
      "src/filter.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "publishConfig": {
    "access": "public"
  }
}
