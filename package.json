{
  "name": "@hoprnet/hopr-connect",
  "version": "0.2.45",
  "description": "A libp2p-complaint transport module that handles NAT traversal by using WebRTC",
  "repository": "https://github.com/hoprnet/hopr-connect.git",
  "homepage": "https://github.com/hoprnet/hopr-connect",
  "license": "GPL-3.0-only",
  "keywords": [
    "nat-traversal",
    "libp2p",
    "webrtc"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "16"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "clean": "rm -Rf ./lib",
    "build": "yarn clean && tsc -p . && tsc -p tsconfig.e2e-tests.json",
    "test": "yarn node --trace-warnings --unhandled-rejections=strict node_modules/.bin/mocha --parallel --full-trace",
    "prepublishOnly": "yarn clean && tsc -p ./tsconfig.npm.json"
  },
  "dependencies": {
    "@hoprnet/hopr-utils": "1.83.0-next.27",
    "abortable-iterator": "^3.0.0",
    "bl": "^5.0",
    "debug": "^4.3.2",
    "heap-js": "^2.1.6",
    "it-handshake": "^2.0.0",
    "multiaddr": "^10.0.0",
    "multihashes": "^4.0.3",
    "peer-id": "~0.15.3",
    "simple-peer": "9.11",
    "stream-to-it": "^0.2.4",
    "webrtc-stun": "3.0.0",
    "wrtc": "0.4.7"
  },
  "devDependencies": {
    "@chainsafe/libp2p-noise": "4.1.1",
    "@types/bl": "5.0.2",
    "@types/bn.js": "5.1.0",
    "@types/chai": "4.3.0",
    "@types/chai-spies": "1.0.3",
    "@types/debug": "4.1.7",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.6",
    "@types/simple-peer": "9.11.3",
    "@types/yargs": "17.0.5",
    "abortable-iterator": "3.0.0",
    "chai": "4.3.4",
    "chai-spies": "1.0.0",
    "it-pair": "1.0.0",
    "it-pipe": "1.1.0",
    "it-pushable": "1.4.2",
    "libp2p": "0.33.0",
    "libp2p-interfaces": "1.1.0",
    "libp2p-mplex": "0.10.4",
    "mocha": "9.1.3",
    "prettier": "2.4.1",
    "prettier-plugin-sh": "0.7.1",
    "ts-node": "10.4.0",
    "typescript": "4.4.4",
    "yargs": "17.2.1"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "src/**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "yarn@3.1.0"
}
