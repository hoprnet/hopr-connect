{
  "name": "@hoprnet/hopr-connect",
  "version": "0.2.42",
  "description": "A libp2p-complaint transport module that handles NAT traversal by using WebRTC",
  "repository": "https://github.com/hoprnet/hopr-connect.git",
  "homepage": "https://github.com/hoprnet/hopr-connect",
  "license": "GPL-3.0-only",
  "keywords": [
    "nat-traversal",
    "libp2p",
    "webrtc"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "16"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "spawn-test-node": "ts-node tests/node.ts",
    "clean": "rm -Rf ./lib",
    "build": "yarn clean && tsc -p .",
    "test": "yarn node --trace-warnings --unhandled-rejections=strict node_modules/.bin/mocha --parallel --full-trace",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@hoprnet/hopr-utils": "1.81.2",
    "abort-controller": "3.0.0",
    "abortable-iterator": "^3.0.0",
    "bl": "^5.0",
    "debug": "^4.3.2",
    "heap-js": "^2.1.6",
    "it-handshake": "^2.0.0",
    "multiaddr": "^10.0.0",
    "multihashes": "^4.0.2",
    "p-defer": "3",
    "peer-id": "^0.15.3",
    "simple-peer": "9.11",
    "stream-to-it": "^0.2.4",
    "webrtc-stun": "3.0.0",
    "wrtc": "0.4.7"
  },
  "devDependencies": {
    "@chainsafe/libp2p-noise": "^4.1.1",
    "@types/bl": "^5.0.1",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.2.21",
    "@types/chai-spies": "^1.0.3",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^9.0.0",
    "@types/node": "16",
    "@types/simple-peer": "^9.11.2",
    "@types/yargs": "^17.0.2",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "it-pair": "^1.0.0",
    "it-pipe": "^1.1.0",
    "it-pushable": "^1.4.2",
    "libp2p": "^0.32.4",
    "libp2p-interfaces": "1.0.1",
    "libp2p-mplex": "0.10.4",
    "mocha": "^9.1.1",
    "prettier": "~2.4.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.1",
    "yargs": "^17.1.1"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "src/**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "publishConfig": {
    "access": "public"
  }
}
