{
  "name": "@hoprnet/hopr-connect",
  "version": "0.2.27",
  "description": "A libp2p-complaint transport module that handles NAT traversal by using WebRTC",
  "repository": "https://github.com/hoprnet/hopr-connect.git",
  "homepage": "https://github.com/hoprnet/hopr-connect",
  "license": "GPL-3.0-only",
  "keywords": [
    "nat-traversal",
    "libp2p",
    "webrtc"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": "14 || 15",
    "yarn": "1"
  },
  "files": [
    "lib",
    "!**/*.spec.ts",
    "!**/*.spec.d.ts",
    "!**/*.spec.js",
    "!**/*.spec.js.map"
  ],
  "scripts": {
    "lint": "prettier --check .",
    "lint:fix": "prettier --write .",
    "clean": "rm -Rf ./lib",
    "build": "yarn clean && tsc -p .",
    "test": "yarn node --trace-warnings --unhandled-rejections=strict node_modules/.bin/mocha --reporter=tap --full-trace --exit",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "@hoprnet/hopr-utils": "1.72.4",
    "@mapbox/node-pre-gyp": "^1.0.5",
    "abortable-iterator": "^3.0.0",
    "bl": "^5.0",
    "debug": "^4.3.1",
    "it-handshake": "^2.0.0",
    "multiaddr": "~9.0.1",
    "multihashes": "^4.0.2",
    "p-defer": "3",
    "peer-id": "~0.14.8",
    "simple-peer": "9.11",
    "stream-to-it": "^0.2.3",
    "webrtc-stun": "3.0.0",
    "wrtc": "0.4.7"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/mocha": "^8.2.2",
    "@types/node": "14",
    "@types/simple-peer": "^9.11",
    "abort-controller": "3.0.0",
    "it-pair": "^1.0.0",
    "it-pipe": "^1.1.0",
    "libp2p": "^0.31.6",
    "libp2p-interfaces": "^0.11",
    "libp2p-mplex": "0.10",
    "libp2p-noise": "^3.0",
    "mocha": "^9.0",
    "prettier": "~2.3.1",
    "ts-node": "~9.1.1",
    "typescript": "^4.2"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": [
      "src/addrs.spec.ts",
      "src/filter.spec.ts",
      "src/webRTCConnection.spec.ts",
      "src/stun.spec.ts",
      "src/listener.spec.ts",
      "src/utils/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "publishConfig": {
    "access": "public"
  }
}
