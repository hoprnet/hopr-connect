{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "node_modules/@types", "src/@types"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
