{
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "target": "es2021",
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "strict": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"]
}
